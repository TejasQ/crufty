{
  "name": "crufty",
  "version": "1.0.0",
  "description": "A CLI tool to check for files exceeding line count thresholds, because we all accumulate cruft over time.",
  "author": "Tejas Kumar",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/tejasq/crufty"
  },
  "keywords": [
    "cli",
    "code-quality",
    "line-count",
    "refactoring",
    "cruft",
    "technical-debt",
    "code-analysis",
    "developer-tools"
  ],
  "main": "./dist/index.js",
  "bin": {
    "crufty": "./dist/index.js"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "clean": "rimraf dist coverage",
    "prebuild": "npm run clean",
    "build:types": "tsc",
    "build:bundle": "esbuild index.ts --bundle --platform=node --outfile=dist/index.js",
    "build": "run-s build:*",
    "dev": "run-p watch:*",
    "watch:types": "tsc --watch",
    "watch:bundle": "esbuild index.ts --bundle --platform=node --outfile=dist/index.js --watch",
    "test": "vitest run",
    "test:watch": "vitest watch",
    "test:coverage": "vitest run --coverage",
    "lint": "crufty",
    "prepublishOnly": "npm run build",
    "prepare": "npm run build"
  },
  "dependencies": {
    "chalk": "^5.3.0",
    "commander": "^12.1.0",
    "glob": "^11.0.0",
    "ignore": "^6.0.2"
  },
  "devDependencies": {
    "@vitest/coverage-v8": "2.1.6",
    "esbuild": "^0.20.1",
    "npm-run-all": "^4.1.5",
    "rimraf": "^6.0.1",
    "typescript": "^5.0.0",
    "vitest": "^2.1.6"
  }
}
